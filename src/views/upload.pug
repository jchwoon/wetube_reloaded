extends base.pug

block head
    div.upload__container
        div.upload__video 
            video#preview 
            button#actionBtn.social__btn Start Recording
        if errorMessage 
            h3=errorMessage
        form(method="POST",enctype="multipart/form-data")
            label(for="video") Upload Video
            input(type="file", accept="video/*", name="video", id="video", required)
            label(for="thumb") Upload ThumbNail
            input(type="file", accept="image/*", name="thumb", id="thumb", required)
            input(placeholder="Title", required, type="text", name="title")
            input(placeholder="Description", required, type="text", name="description")
            input(placeholder="Hashtags seperated by comma", required, type="text", name="hashtag")
            input(type="submit", value="Upload Video")
block scripts 
    script(src="/static/js/recorder.js") 