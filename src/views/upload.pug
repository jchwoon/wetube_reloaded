extends base.pug

block head 
    if errorMessage 
        h3=errorMessage
    form(method="POST",enctype="multipart/form-data")
        label(for="video") Upload Video
        input(type="file", accept="video/*", name="video", id="video", required)
        input(placeholder="Title", required, type="text", name="title")
        input(placeholder="Description", required, type="text", name="description")
        input(placeholder="Hashtags seperated by comma", required, type="text", name="hashtag")
        input(type="submit", value="Upload Video")