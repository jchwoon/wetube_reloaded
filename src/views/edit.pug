extends base.pug

block head
    h3 Edit #{videos.title} Video
    form(method="POST")
        input(placeholder="Video Title",required, value=videos.title,name="title")
        input(placeholder="Description", required, type="text", name="description", value=videos.description)
        input(placeholder="Hashtags seperated by comma", required, type="text", name="hashtag", value=videos.hashtag.join())
        input(type="submit", value="Save")